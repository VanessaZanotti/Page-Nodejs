<h2>Lista de categorias: </h2>
<hr />
<a href='categorias/add'><button class='btn btn-primary'>Nova categoria</button></a>

{{#each categorias}}
  <div class='card mt-4'>
    <div class='card-body'>
      <h4>{{nome}}</h4>
      <h5>Slug: {{slug}}</h5>
      <h5>Data de Criação: {{date}}</h5>
      <a href='/admin/categorias/edit/{{_id}}'><button
          class='btn btn-primary mt-4'
        >Editar Categoria</button></a>
      <form action='/admin/categorias/deletar' method='POST'>
        <input type='hidden' name='id' value='{{_id}}' />
        <button type='submit' class='btn btn-danger mt-2'>Deletar Categoria</button>
      </form>

    </div>
  </div>
{{else}}

  <h4 class='mt-4'> Não existem categorias cadastradas! </h4>

{{/each}}