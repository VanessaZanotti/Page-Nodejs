{{#each erros}}
  <div class='alert alert-danger'>{{texto}}</div>

{{else}}

{{/each}}

<div class='card'>
  <div class='card-body'>
    <form action='/admin/postagens/nova' method='POST'>
      <h4>Nova Postagem</h4>
      <label for='titulo'>Título: </label>
      <input type='text' name='titulo' class='form-control mt-2' required />
      <label for='slug'>Slug: </label>
      <input type='text' name='slug' class='form-control mt-2' required />
      <label for='descricao'>Descrição: </label>
      <input type='text' name='descricao' class='form-control mt-2' required />
      <label for='conteudo'>Conteúdo: </label>
      <textarea name='conteudo' class='form-control mt-2' required></textarea>
      <label for='categoria'>Categoria: </label>
      <select name='categoria' class='form-select mt-2'>
        {{#each categorias}}
          <option value='{{_id}}'>{{nome}}</option>
        {{else}}
          <option value='0'>Nenhuma categoria registrada.</option>
        {{/each}}
      </select>
      <button class='btn btn-success mt-2' type='submit'>Adicionar Postagem</button>
    </form>
  </div>
</div>